<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:gravity="center"
    android:padding="10dp"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/default_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/productDetail"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/imageView"
        android:layout_toLeftOf="@+id/product_add">

        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Ashirwaad Atta"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Product Brand"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mandi_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingLeft="6dp"
            android:text="Mandi Price: â‚¹ 100"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/packSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="sdsadsa"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"

            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/update"
                android:layout_marginRight="20dp"
                android:background="@drawable/bullet"
                android:padding="3dp"
                android:src="@drawable/ic_autorenew_white_24dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/delete"
                android:layout_marginRight="20dp"
                android:background="@drawable/bullet"
                android:padding="3dp"
                android:src="@drawable/ic_delete_white_24dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_add"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:text="Add"
        android:textColor="@android:color/white">

        <Button
            android:id="@+id/increment"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/oval_button"
            android:text="+"
            android:layout_gravity="center"
            android:textColor="@color/mainColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="12sp"
            android:background="@drawable/edit_text_product"
            android:inputType="number" />

        <Button
            android:id="@+id/decrement"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/oval_button"
            android:text="-"
            android:textColor="@color/mainColor"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>