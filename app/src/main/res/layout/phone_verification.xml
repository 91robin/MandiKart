<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e37720"
    android:orientation="vertical"
    tools:context="com.mandikart.app.PhoneVerification">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="कृप्या यहाँ अपना फ़ोन नंबर डाले!"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"/>

    <EditText android:id="@+id/phone_number"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:inputType="phone"
        android:maxLength="10"
        android:singleLine="true"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:hint="  Enter your phone number"
        android:background="@drawable/phone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="कृप्या अपने शहर का नाम डाले !"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_below="@id/textEnglish"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"/>

    <TextView android:id="@+id/textEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kindly enter your city name."
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"/>

    <Spinner android:id="@+id/spinnerCity"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_height="40dp"
        android:spinnerMode="dialog"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@drawable/spinner" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/phone_dark"
        android:text="Proceed"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/phone_number"
        android:id="@+id/buttonProceed" />
</LinearLayout>
