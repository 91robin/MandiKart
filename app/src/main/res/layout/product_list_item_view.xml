<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@android:color/white"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/default_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/productDetail"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/product_add"
            android:layout_toRightOf="@id/imageView"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Ashirwaad Atta"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/product_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingLeft="8dp"
                android:text="Product Brand"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/mandi_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    android:paddingLeft="8dp"
                    android:text="Mandi Price: ₹ 100"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:text="₹ 00.00"
                    android:textSize="12sp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/packSizeSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/product_add"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:text="Add"
            android:textColor="@android:color/white">

            <Button
                android:id="@+id/increment"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_button"
                android:text="+"
                android:textColor="@color/mainColor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/edit_text_product"
                android:inputType="number"
                android:text="12sp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/decrement"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_button"
                android:text="-"
                android:textColor="@color/mainColor"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@color/mainColor"
        android:drawableLeft="@drawable/ic_shopping_cart_white_24dp"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:layout_below="@id/mainContent"
        android:text="Add"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/addedButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@color/mainColor"
        android:layout_below="@id/mainContent"
        android:drawableLeft="@drawable/ic_done_white_24dp"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:text="Added"
        android:textColor="@color/white" />

</RelativeLayout>